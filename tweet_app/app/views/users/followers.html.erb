<div class="main user-show">
  <div class="container">
    <%= link_to("/users/#{@user.id}") do %>
      <span class="fas fa-angle-left page_back">
        <%= @user.name %>
      </span>
    <% end %>

    <ul class="user-tabs">
      <li><%= link_to("フォロー","/users/#{@user.id}/followings") %></li>
      <li class="active"><%= link_to("フォロワー","/users/#{@user.id}/followers") %></li>
    </ul>

    <% if @followers.count != 0 %>
      <% @followers.each do |follower| %>
        <% user = User.find_by(id: follower.user_id) %>
        <div class="posts-index-item">
          <div class="post-left">
            <img src="<%= "/user_images/#{user.image_name}" %>">
          </div>
          <div class="post-right">
            <div class="post-user-name">
              <%= link_to(user.name,"/users/#{user.id}") %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="posts-index-item">まだフォローはいません</div>
    <% end %>
  </div>
</div>